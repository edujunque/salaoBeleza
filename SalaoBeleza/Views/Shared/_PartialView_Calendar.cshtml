    <div class="container-fluid">
        <div class="row" style="background-color: rgb(243,244,246)">
            <div class="col">
                Agenda
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <div id="datetimepicker12"></div>
            </div>
            <div class="col-sm-9">
                grid com calendario
                <div class="row" style="display:flex; flex-direction:row">
                    <div class="colune-branca">
                        <div class="nome-pessoa-calendar">
                        </div>
                        <div class="coluna-horario">
                            <div>8:00</div>
                        </div>
                        <div class="coluna-horario">
                            <div>8:30</div>
                        </div>
                        <div class="coluna-horario">
                            <div>9:00</div>
                        </div>
                        <div class="coluna-horario">
                            <div>9:30</div>
                        </div>
                        <div class="coluna-horario">
                            <div>10:00</div>
                        </div>
                        <div class="coluna-horario">
                            <div>10:30</div>
                        </div>
                        <div class="coluna-horario">
                            <div>11:00</div>
                        </div>
                        <div class="coluna-horario">
                            <div>11:30</div>
                        </div>
                        <div class="coluna-horario">
                            <div>12:00</div>
                        </div>
                    </div>
                    <div class="coluna-pessoa-calendar">
                        <div class="nome-pessoa-calendar">
                            Cabelo 1
                        </div>
                    </div>
                    <div class="coluna-pessoa-calendar">
                        <div class="nome-pessoa-calendar">
                            Cabelo 1
                        </div>
                        <div class="descricao-agendamento">eita</div>
                    </div>
                    <div class="coluna-pessoa-calendar">
                        <div class="nome-pessoa-calendar">
                            Cabelo 1
                        </div>
                    </div>
                    <div class="coluna-pessoa-calendar">
                        <div class="nome-pessoa-calendar">
                            Cabelo 1
                        </div>
                    </div>
                    <div class="coluna-pessoa-calendar">
                        <div class="nome-pessoa-calendar">
                            Cabelo 1
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    $(function () {
        $('#datetimepicker12').datetimepicker({
            inline: true,
            sideBySide: false,
            format: 'L'
        });
    });
</script>

