@model SalaoBeleza.ViewModels.UsersListViewModel

@{
    ViewBag.Title = "Usuario - Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Excluir</h2>*@

<h3>Você tem certeza que gostaria de escluir esse usuário?</h3>
<div>
    @*<h4>Usuário</h4>*@
    <hr />


    @using (Html.BeginForm("Delete", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        @Html.AntiForgeryToken()
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

        </dl>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Voltar para Lista", "List")
        </div>
    }
</div>
